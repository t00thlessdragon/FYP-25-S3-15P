@model FYP_25_S3_15P.Models.ContentMaster
@{
    var plans = Model.Plans ?? new List<FYP_25_S3_15P.Models.SubscriptionPlan>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">Features</h4>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFeatureModal">
    + Add Feature
  </button>
</div>

<div class="table-responsive">
  <table class="table align-middle">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Plans</th>
        <th class="text-center">Show on Home</th>
        <th class="text-end" style="width:80px;">Action</th>
      </tr>
    </thead>
    <tbody>
    @foreach (var f in Model.Features)
    {
        var planIds   = string.Join(",", f.PlanFeatures.Select(pf => pf.PlanID));
        var planNames = string.Join(", ",
                          f.PlanFeatures
                           .Select(pf => pf.Plan?.Name ?? "")
                           .Where(n => !string.IsNullOrWhiteSpace(n)));

      <tr>
        <td>@f.Name</td>
        <td>@f.Description</td>
        <td>@(string.IsNullOrWhiteSpace(planNames) ? "-" : planNames)</td>

        <!-- Show on home toggle -->
        <td class="text-center">
          <form asp-controller="Features" asp-action="ToggleHome" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@f.FeatureID" />
            <input type="hidden" name="value" value="@f.ShowOnHome.ToString().ToLower()" />
            <div class="form-check form-switch m-0 d-inline-flex align-items-center">
              <input class="form-check-input" type="checkbox" role="switch"
                     @(f.ShowOnHome ? "checked" : "")
                     onchange="this.form.querySelector('input[name=value]').value=this.checked; this.form.submit();" />
            </div>
          </form>
        </td>

        <td class="text-end">
          <div class="dropdown">
            <button class="btn btn-sm btn-link text-muted p-0" data-bs-toggle="dropdown">
              <i class="bi-three-dots-vertical fs-5"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <button type="button"
                        class="dropdown-item"
                        data-bs-toggle="modal"
                        data-bs-target="#editFeatureModal"
                        data-id="@f.FeatureID"
                        data-name="@f.Name"
                        data-description="@f.Description"
                        data-planids="@planIds"
                        data-homeorder="@f.HomeOrder"
                        data-hometitle="@f.HomeTitle"
                        data-homesummary="@f.HomeSummary"
                        data-homeimage="@f.HomeImagePath">
                  View / Edit
                </button>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <form asp-controller="Features" asp-action="Delete" method="post">
                  @Html.AntiForgeryToken()
                  <input type="hidden" name="id" value="@f.FeatureID" />
                  <button type="submit" class="dropdown-item text-danger">Delete</button>
                </form>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>

<!-- Add Feature Modal (unchanged except the usual fields) -->
<div class="modal fade" id="addFeatureModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form asp-controller="Features" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">Add Feature</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input name="Name" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="Description" rows="3" class="form-control"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Plans</label>
            <select id="add_PlanIds" name="SelectedPlanIds" class="form-select" multiple>
              @foreach (var p in plans) { <option value="@p.PlanID">@p.Name</option> }
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- View/Edit Feature Modal (read-only by default) -->
<div class="modal fade" id="editFeatureModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form asp-controller="Features" asp-action="Edit" method="post" enctype="multipart/form-data" id="editFeatureForm">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">View / Edit Feature</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" id="f_Id" name="FeatureId" />
          <input type="hidden" id="f_ExistingImage" name="existingHomeImagePath" />

          <div class="row g-3">
            <div class="col-12 col-md-6">
              <label class="form-label">Name</label>
              <input id="f_Name" name="Name" class="form-control" readonly />
            </div>

            <div class="col-12 col-md-6">
              <label class="form-label">Home Order</label>
              <input id="f_HomeOrder" name="HomeOrder" type="number" class="form-control" readonly />
            </div>

            <div class="col-12">
              <label class="form-label">Description</label>
              <textarea id="f_Description" name="Description" rows="3" class="form-control" readonly></textarea>
            </div>

            <div class="col-12 col-md-6">
              <label class="form-label">Card Title (HomeTitle)</label>
              <input id="f_HomeTitle" name="HomeTitle" class="form-control" readonly />
            </div>

            <div class="col-12">
              <label class="form-label">Card Summary (HomeSummary)</label>
              <textarea id="f_HomeSummary" name="HomeSummary" rows="3" class="form-control" readonly></textarea>
            </div>

            <div class="col-12 col-md-6">
              <label class="form-label">Card Image (HomeImagePath)</label>
              <input id="f_Image" name="HomeImage" type="file" accept="image/*" class="form-control" disabled />
              <div class="small text-muted mt-1">Leave empty to keep the current image.</div>
            </div>
            <div class="col-12 col-md-6 d-flex align-items-end">
              <img id="f_ImagePreview" alt="Preview" class="img-thumbnail w-100"
                   style="max-height:160px; object-fit:cover;" />
            </div>

            <div class="col-12">
              <label class="form-label">Plans</label>
              <select id="f_PlanIds" name="SelectedPlanIds" class="form-select" multiple disabled>
                @foreach (var p in plans) { <option value="@p.PlanID">@p.Name</option> }
              </select>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="enableFeatureEditBtn" class="btn btn-outline-primary">Edit</button>
          <button type="submit" id="saveFeatureChangesBtn" class="btn btn-primary" disabled>Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

