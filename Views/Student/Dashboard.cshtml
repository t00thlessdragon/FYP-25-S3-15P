@model FYP_25_S3_15P.ViewModels.StudentDashboardVm
@{ Layout = "~/Views/Shared/_StudentLayout.cshtml"; }

@{
    ViewData["Title"] = "Student Dashboard";

    // which tab is active? (projects | prefs)
    var tab = (Context.Request.Query["tab"].ToString() ?? "").ToLowerInvariant();
    if (string.IsNullOrWhiteSpace(tab)) tab = "projects";

    // demo sample for prefs list (replace with real data when wired)
    var prefs = Model.Projects.Take(2).ToList();
}

<section class="container-wide card-xl">
  <div class="card rounded-4 p-4 p-lg-5 shadow-lg">

    <h2 class="mb-1">Student Dashboard</h2>
    <div class="text-muted mb-4">
      Welcome, @Model.StudentName — Status: <strong>@Model.StatusText</strong>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
      <li class="nav-item">
        <a class="nav-link @(tab=="projects" ? "active" : "")"
           asp-action="Dashboard" asp-route-tab="projects">
          Project Listings
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link @(tab=="prefs" ? "active" : "")"
           asp-action="Dashboard" asp-route-tab="prefs">
          My Preferences
          @if (prefs.Count > 0) { <span class="badge text-bg-secondary ms-1">@prefs.Count</span> }
        </a>
      </li>
    </ul>

    <div class="tab-content">

      <!-- PROJECT LISTINGS -->
      <div class="tab-pane fade @(tab=="projects" ? "show active" : "")" id="tab-projects">

        <div class="alert alert-info d-flex align-items-center gap-2">
          <strong class="me-1">Reminder:</strong> @Model.ReminderText
        </div>

        <!-- Search -->
        <form method="get" class="row g-2 align-items-center mb-3">
          <input type="hidden" name="tab" value="projects" />
          <div class="col-12 col-md-9">
            <input class="form-control" name="q" value="@Model.Search"
                   placeholder="Search by code, title, or description..." />
          </div>
          <div class="col-12 col-md-3 text-md-end">
            <button class="btn btn-dark w-100 w-md-auto" type="submit">
              <i class="bi bi-search me-1"></i> Search
            </button>
          </div>
        </form>

        <!-- Table with Tags column -->
        <div class="table-responsive">
  <table class="table align-middle">
    <thead class="table-dark">
      <tr>
        <th style="width:50px">#</th>
        <th style="width:150px">Project ID</th>
        <th style="width:260px">Project Title</th>
        <th>Description</th>
        <th style="width:200px">Tags</th>
        <th style="width:160px" class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Projects.Count; i++)
    {
        var p = Model.Projects[i];
        <tr>
          <td class="text-muted">@(@i + 1)</td>
          <td><code>@p.ProjectCode</code></td>
          <td class="fw-semibold">@p.Title</td>
          <td class="text-truncate" style="max-width:400px;">
            @p.Description
          </td>
          <td>
            @foreach (var tag in p.Tags)
            {
                <span class="badge text-bg-light border me-1 mb-1">✔ @tag</span>
            }
          </td>
          <td class="text-end">
            <a class="btn btn-sm btn-dark"
               asp-action="ViewDetails" asp-route-id="@p.Id">
              View Details
            </a>
          </td>
        </tr>
    }
    </tbody>
  </table>
</div>


        @if (TempData["Msg"] is string m1)
        {
            <div class="alert alert-success mt-3">@m1</div>
        }
      </div>

      <!-- MY PREFERENCES -->
      <div class="tab-pane fade @(tab=="prefs" ? "show active" : "")" id="tab-prefs">

        @if (prefs.Count == 0)
        {
          <div class="text-center text-muted py-5">
            <div class="display-6 mb-2">Nothing here yet</div>
            <p class="mb-3">Add projects from <strong>Project Listings</strong>.</p>
            <a class="btn btn-dark" asp-action="Dashboard" asp-route-tab="projects">Browse Projects</a>
          </div>
        }
        else
        {
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-dark">
                <tr>
                  <th style="width:60px">Rank</th>
                  <th style="width:180px">Project ID</th>
                  <th>Project Title</th>
                  <th class="text-end" style="width:220px;">Action</th>
                </tr>
              </thead>
              <tbody>
              @for (int i = 0; i < prefs.Count; i++)
              {
                  var p = prefs[i];
                  <tr>
                    <td class="text-muted">@(@i + 1)</td>
                    <td><code>@p.ProjectCode</code></td>
                    <td class="fw-semibold">@p.Title</td>
                    <td class="text-end">
                      <button type="button"
                              class="btn btn-sm btn-dark btn-pref"
                              data-id="@p.Id"
                              data-code="@p.ProjectCode"
                              data-title="@p.Title"
                              data-rank="@(i + 1)">
                        Edit
                      </button>
                      <button type="button" class="btn btn-sm btn-dark ms-1">Remove</button>
                    </td>
                  </tr>
              }
              </tbody>
            </table>
          </div>

          <div class="mt-3 text-end">
            <button type="button" class="btn btn-dark">Submit Preferences</button>
          </div>

          @if (TempData["Msg"] is string m2)
          {
              <div class="alert alert-success mt-3">@m2</div>
          }
        }
      </div>
    </div>
  </div>
</section>

<!-- Reusable Preferences Modal -->
<div class="modal fade" id="prefModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content rounded-4">
      <div class="modal-header">
        <h5 class="modal-title">Project Preferences</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form asp-controller="Student" asp-action="AddToPreferences" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="prefProjectId" />

        <div class="modal-body">
          <div class="mb-3">
            <div class="text-muted">Project ID</div>
            <div class="fs-5" id="prefProjectCode">—</div>
          </div>

          <div class="mb-4">
            <div class="text-muted">Project Title</div>
            <div class="fs-5" id="prefProjectTitle">—</div>
          </div>

          <div class="row g-3 align-items-center">
            <div class="col-12 col-md-4">
              <label for="prefRank" class="form-label">Preferences Rank</label>
              <select id="prefRank" name="rank" class="form-select">
                <option value="" selected>Rank</option>
                <option value="1">1 (Top)</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts{
  <script>
    (function () {
      const modalEl = document.getElementById('prefModal');
      const modal = new bootstrap.Modal(modalEl);

      document.addEventListener('click', function (e) {
        const btn = e.target.closest('.btn-pref');
        if (!btn) return;

        const id    = btn.getAttribute('data-id');
        const code  = btn.getAttribute('data-code')  || '';
        const title = btn.getAttribute('data-title') || '';
        const rank  = (btn.getAttribute('data-rank') || '').trim();

        // Fill modal fields
        document.getElementById('prefProjectId').value = id;
        document.getElementById('prefProjectCode').textContent = code;
        document.getElementById('prefProjectTitle').textContent = title;

        const sel = document.getElementById('prefRank');
        for (const opt of sel.options) opt.selected = false;
        const target = [...sel.options].find(o => o.value === rank) || sel.options[0];
        target.selected = true;

        modal.show();
      }, false);
    })();
  </script>
}
