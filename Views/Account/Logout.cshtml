@{
    ViewData["Title"] = "Signed out";
    // Use your normal site layout so navbar, scripts, and Bootstrap are available
    Layout = "_Layout";
}

<div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
            <div class="mx-auto mb-3"
                 style="width:88px;height:88px;border-radius:50%;
                  border:4px solid #cfe9d6; display:flex;align-items:center;justify-content:center;">
                <svg width="46" height="46" viewBox="0 0 24 24" fill="none"
                     stroke="#28a745" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
            </div>
            <h3 class="mb-2">You have successfully logged out.</h3>
            <p class="text-muted mb-3">See you again soon!</p>
            <a class="btn btn-primary px-4" href="@Url.Action("Index","Home")">OK</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
  document.addEventListener('DOMContentLoaded', function () {
    // Show modal immediately; prevent closing with ESC or backdrop click
    var modal = new bootstrap.Modal(document.getElementById('logoutModal'), {
      backdrop: 'static', keyboard: false
    });
    modal.show();
  });
</script>
}