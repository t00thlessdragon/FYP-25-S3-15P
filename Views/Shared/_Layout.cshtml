@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SMART</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/choices.min.css" asp-append-version="true" />
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-nav fixed-top shadow-sm">
  <div class="container-wide nav-grid">

    <!-- Brand (left) -->
    <a class="navbar-brand p-0 me-3" asp-controller="Home" asp-action="Index">
      <img src="~/images/smartlogo.png" alt="SMART" class="brand-logo" />
    </a>

    <!-- Toggler (mobile) -->
    <button class="navbar-toggler d-lg-none ms-auto" type="button"
            data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Center menu (desktop) -->
    <ul class="navbar-nav nav-center d-none d-lg-flex">
      <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="/#features">Features</a></li>
      <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
      <li class="nav-item"><a class="nav-link" href="/#plans">Plans</a></li>
      <li class="nav-item"><a class="nav-link" href="/#testimonials">Testimonials</a></li>
      <li class="nav-item"><a class="nav-link" href="/#faq">FAQ</a></li>
    </ul>

    <!-- Right CTAs (desktop) -->
    <div class="d-none d-lg-flex align-items-center">
      @if (User?.Identity?.IsAuthenticated ?? false)
      {
        var displayName = User.Identity?.Name ?? "User";

        <!-- Stack: Welcome line + small link just below -->
        <div class="d-flex flex-column align-items-end">
          <div class="dropdown">
            <a class="nav-link dropdown-toggle fw-semibold" href="#" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
              Welcome, @displayName
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="mailto:noreply.smartproject@gmail.com">Contact Support</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                  @Html.AntiForgeryToken()
                  <button type="submit" class="btn btn-link text-danger p-0">
                    <i class="bi bi-power"></i> Logout
                  </button>
                </form>
              </li>
            </ul>
          </div>

          @* Tiny link right below the Welcome line (PA only) *@
          @if (User.IsInRole("Platform Admin"))
          {
            <a asp-controller="PADashboard" asp-action="ContentMaster"
               class="small link-dark text-decoration-none nav-return-link mt-1">
              Return to Dashboard &rarr;
            </a>
          }

        </div>
      }
      else
      {
        <div class="nav-cta">
          <a class="fw-semibold text-white text-decoration-none me-2"
             asp-controller="ApplicationForm" asp-action="Index">Join Us Now!</a>
          <a class="btn btn-primary btn-sm px-3"
             asp-controller="Account" asp-action="Login">Login</a>
        </div>
      }
    </div>
    
    <!-- MOBILE collapse -->
    <div class="collapse d-lg-none mt-2" id="mainNav">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/#features">Features</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
        <li class="nav-item"><a class="nav-link" href="/#plans">Plans</a></li>
        <li class="nav-item"><a class="nav-link" href="/#testimonials">Testimonials</a></li>
        <li class="nav-item"><a class="nav-link" href="/#faq">FAQ</a></li>

        @if (User?.Identity?.IsAuthenticated ?? false)
        {
          <li><hr class="dropdown-divider" /></li>
          <li class="nav-item px-2 text-muted">Welcome, @User.Identity!.Name</li>

          @* Same tiny link in mobile (PA only) *@
          @if (User.IsInRole("Platform Admin"))
          {
            <li class="nav-item">
              <a class="nav-link small link-dark nav-return-link"
                 asp-controller="PADashboard" asp-action="ContentMaster">
                Return to Dashboard →
              </a>
            </li>
          }
          
          <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post" class="px-2 my-2">
              @Html.AntiForgeryToken()
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-power"></i> Logout
              </button>
            </form>
          </li>
        }
        else
        {
          <li class="nav-item mt-2">
            <a class="fw-semibold text-white text-decoration-none"
               asp-controller="ApplicationForm" asp-action="Index">Join Us Now!</a>
          </li>
          <li class="nav-item mt-2">
            <a class="btn btn-primary btn-sm px-3"
               asp-controller="Account" asp-action="Login">Login</a>
          </li>
        }
      </ul>
    </div>

  </div>
</nav>

<!-- Page content -->
<main class="pt-nav">
    @RenderBody()
</main>

<!-- Scripts -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/choices.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
