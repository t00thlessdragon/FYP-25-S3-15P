@model IEnumerable<FYP_25_S3_15P.Models.SubscriptionPlan>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">Subscription Plans</h4>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPlanModal">
    + Add New Subscription Plan
  </button>
</div>

<div class="table-responsive">
  <table class="table align-middle">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th class="text-end">Price (SGD)</th>
        <th>Description</th>
        <th style="width:80px;">Action</th>
      </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
      <tr>
        <td>@p.Name</td>
        <td class="text-end">@p.Price.ToString("0.00")</td>
        <td>@p.Description</td>
        <td class="text-end">
          <div class="dropdown">
            <button class="btn btn-sm btn-link text-muted p-0" data-bs-toggle="dropdown" aria-label="Row actions">
              <i class="bi bi-three-dots-vertical fs-5"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <button type="button"
                        class="dropdown-item btn-view-edit"
                        data-bs-toggle="modal"
                        data-bs-target="#viewEditModal"
                        data-id="@p.PlanID"
                        data-name="@p.Name"
                        data-price="@p.Price"
                        data-description="@p.Description">
                  View / Edit
                </button>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <button type="button"
                        class="dropdown-item text-danger btn-delete"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteModal"
                        data-id="@p.PlanID"
                        data-name="@p.Name">
                  Delete
                </button>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>

<!-- Add Plan Modal -->
<div class="modal fade" id="addPlanModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form asp-controller="SubscriptionPlans" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">Add New Subscription Plan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Name</label>
              <input name="Name" class="form-control" required />
            </div>
            <div class="col-md-6">
              <label class="form-label">Price (SGD)</label>
              <input name="Price" class="form-control" type="number" step="0.01" min="0" required />
            </div>
            <div class="col-12">
              <label class="form-label">Description</label>
              <input name="Description" class="form-control" />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- View/Edit Modal -->
<div class="modal fade" id="viewEditModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form asp-controller="SubscriptionPlans" asp-action="Edit" method="post" id="editPlanForm">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">View / Edit Subscription Plan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="PlanID" id="edit_PlanID" />
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Name</label>
              <input name="Name" id="edit_Name" class="form-control" readonly />
            </div>
            <div class="col-md-6">
              <label class="form-label">Price (SGD)</label>
              <input name="Price" id="edit_Price" type="number" step="0.01" min="0" class="form-control" readonly />
            </div>
            <div class="col-12">
              <label class="form-label">Description</label>
              <input name="Description" id="edit_Description" class="form-control" readonly />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-outline-primary" id="enableEditBtn">Edit</button>
          <button type="submit" class="btn btn-primary" id="saveChangesBtn" disabled>Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form asp-controller="SubscriptionPlans" asp-action="Delete" method="post" id="deleteForm">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">Delete Subscription Plan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="id" id="delete_Id" />
          <p>Are you sure you want to delete <strong id="delete_Name"></strong>?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Robust JS via event delegation -->
<script>
  // When any Bootstrap modal is about to showâ€¦
  document.addEventListener('show.bs.modal', function (event) {
    const modal = event.target;
    const trigger = event.relatedTarget;

    if (modal.id === 'viewEditModal' && trigger) {
      // populate fields
      document.getElementById('edit_PlanID').value      = trigger.getAttribute('data-id') ?? '';
      document.getElementById('edit_Name').value        = trigger.getAttribute('data-name') ?? '';
      document.getElementById('edit_Price').value       = trigger.getAttribute('data-price') ?? '';
      document.getElementById('edit_Description').value = trigger.getAttribute('data-description') ?? '';

      // lock + disable save by default
      ['edit_Name','edit_Price','edit_Description'].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.setAttribute('readonly','readonly');
      });
      const save = document.getElementById('saveChangesBtn');
      if (save) save.disabled = true;
    }

    if (modal.id === 'deleteModal' && trigger) {
      document.getElementById('delete_Id').value = trigger.getAttribute('data-id') ?? '';
      document.getElementById('delete_Name').textContent = trigger.getAttribute('data-name') ?? '';
    }
  });

  // Delegate clicks so it always works, even after re-renders
  document.addEventListener('click', function (e) {
    if (e.target.closest('#enableEditBtn')) {
      ['edit_Name','edit_Price','edit_Description'].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.removeAttribute('readonly');
      });
      const save = document.getElementById('saveChangesBtn');
      if (save) save.disabled = false;
    }
  });
</script>
