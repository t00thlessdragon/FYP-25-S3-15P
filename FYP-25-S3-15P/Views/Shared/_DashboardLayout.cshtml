@* Dashboard-only layout (for backend CRUD dashboards) *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SMART Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Shared site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/choices.min.css" asp-append-version="true" />
</head>

<body data-active-modal="@ViewBag.ActiveModal">
<!-- Dashboard Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
    <div class="container-wide">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">SMART</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dashboardNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="dashboardNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Main Site</a></li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PADashboard" asp-action="ContentMaster">Content Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PADashboard" asp-action="ApplicationMaster">User Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PADashboard" asp-action="ApplicationMaster">Application Master</a>
                </li>

            </ul>
        </div>
    </div>
</nav>

<main class="pt-nav">
    @RenderBody()
</main>

<!-- JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/choices.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/features-admin.js" asp-append-version="true"></script>



@RenderSection("Scripts", required: false)
</body>
</html>