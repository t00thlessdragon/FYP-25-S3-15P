@model FYP.Models.SupervisorProfile

@{
    ViewBag.Title="Supervisor Profile";
}

<style>
    /* Basic styling to match the UI design */
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; background-color: #f0f2f5; padding: 20px; }
    .profile-card { background-color: white; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); padding: 20px; margin-bottom: 20px; }
    .header { display: flex; align-items: center; margin-bottom: 20px; }
    .profile-pic { width: 60px; height: 60px; border-radius: 50%; object-fit: cover; margin-right: 15px; }
    .info-section h3 { border-bottom: 1px solid #eee; padding-bottom: 10px; margin-top: 0; }
    .info-group { display: flex; flex-wrap: wrap; margin-bottom: 15px; }
    .info-item { flex: 1 1 300px; margin-right: 20px; }
    .info-label { font-weight: bold; color: #555; display: block; margin-bottom: 5px; }
    .info-value { color: #333; }
    .button-group { display: flex; justify-content: flex-end; gap: 10px; }
    .btn { padding: 10px 20px; border-radius: 5px; border: none; cursor: pointer; }
    .btn-update { background-color: #f0f0f0; color: #333; }
    .btn-edit { background-color: #007bff; color: white; }
</style>

<div class="profile-card">
    <div class="header">
        <img src="https://via.placeholder.com/60" alt="Profile Picture" class="profile-pic" />
        <div>
            <h2>@Model.Name</h2>
            <p>@Model.Role</p>
        </div>
    </div>
    
    <div class="info-section">
        <h3>Personal Information</h3>
        <div class="info-group">
            <div class="info-item">
                <span class="info-label">Supervisor</span>
                <span class="info-value">@Model.SupervisorID</span>
            </div>
            <div class="info-item">
                <span class="info-label">Email</span>
                <span class="info-value">@Model.Email</span>
            </div>
            <div class="info-item">
                <span class="info-label">Phone</span>
                <span class="info-value">@Model.Phone</span>
            </div>
        </div>
    </div>
    
    <div class="info-section">
        <h3>Professional Information</h3>
        <div class="info-group">
            <div class="info-item">
                <span class="info-label">Department</span>
                <span class="info-value">@Model.Department</span>
            </div>
            <div class="info-item">
                <span class="info-label">Position</span>
                <span class="info-value">@Model.Position</span>
            </div>
            <div class="info-item">
                <span class="info-label">Date Joined</span>
                <span class="info-value">@Model.DateJoined</span>
            </div>
            <div class="info-item">
                <span class="info-label">Area of Expertise</span>
                <span class="info-value">@Model.AreaOfExpertise</span>
            </div>
        </div>
    </div>

    <div class="button-group">
        <form asp-controller="SupervisorProfile" asp-action="AddUpdateExpertise" method="post">
            <button type="submit" class="btn btn-update">Add/Update Area of Expertise</button>
        </form>
        <form asp-controller="SupervisorProfile" asp-action="EditProfile" method="post">
            <button type="submit" class="btn btn-edit">Edit Profile</button>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}