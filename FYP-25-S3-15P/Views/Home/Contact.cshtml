<section class="container-xxl pt-nav">
  <div class="text-center my-4">
    <h1 class="display-4 fw-bold">CONTACT US</h1>
    <div class="contact-underline mx-auto my-3"></div>
    <p class="lead text-muted px-2">
      We make your project journey smarter.
    </p>
  </div>

  <div class="row g-4 align-items-stretch">
    <!-- Left panel -->
    <div class="col-12 col-lg-5">
      <div class="contact-card h-100 p-4 p-md-5">
        <div class="row gy-5">
          <div class="col-12 d-flex gap-3">
            <div class="contact-icon"><i class="bi bi-geo-alt"></i></div>
            <div>
              <div class="contact-label">ADDRESS:</div>
              <div class="text-light-emphasis small">
                461 Clementi Rd,<br/>Singapore 599491
              </div>
            </div>
          </div>

          <div class="col-12 d-flex gap-3">
            <div class="contact-icon"><i class="bi bi-envelope"></i></div>
            <div>
              <div class="contact-label">EMAIL:</div>
              <div class="small">
                <a class="contact-link" href="mailto:noreply.smartprojectportal@gmail.com">noreply.smartprojectportal@gmail.com</a><br/>
                <a class="contact-link" href="mailto:noreply.smartprojectportal@gmail.com">noreply.smartprojectportal@gmail.com</a>
              </div>
            </div>
          </div>

          <div class="col-12 d-flex gap-3">
            <div class="contact-icon"><i class="bi bi-telephone"></i></div>
            <div>
              <div class="contact-label">CALL US:</div>
              <div class="text-light-emphasis small">
                62489746
              </div>
            </div>
          </div>

          <div class="col-12">
            <div class="contact-label">CONTACT US</div>
            <div class="text-light-emphasis small mb-3">
              Contact us for any queries that you may have.
            </div>
            <div class="d-flex gap-3 fs-4">
              <a class="contact-social" href="https://www.facebook.com/globalsim/" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
              <a class="contact-social" href="https://www.instagram.com/simglobaledge/" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right map -->
    <div class="col-12 col-lg-7">
      <div class="ratio ratio-4x3 ratio-lg-16x9 contact-map">
        <!-- Replace with your exact Google Maps embed src -->
