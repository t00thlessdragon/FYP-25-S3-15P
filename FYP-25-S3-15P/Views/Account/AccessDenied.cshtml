@{
    ViewData["Title"] = "Access Denied";
}

<section class="container-wide card-xl">
    <div class="card rounded-4 p-4 p-lg-5 shadow-lg">
        <h2 class="mb-3">Access denied</h2>
        <p class="text-muted">
            You donâ€™t have permission to view this page.
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <text>(You are signed in as <strong>@User.Identity!.Name</strong>.)</text>
            }
        </p>

        <div class="d-flex gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Main Site</a>

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">Sign out</button>
                </form>
            }
        </div>
    </div>
</section>